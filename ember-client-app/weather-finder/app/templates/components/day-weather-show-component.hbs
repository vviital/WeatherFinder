<div>
    <table>
        <h1>{{date-formatter date}}</h1>
        <thead>
            <tr>
                <td>
                    Время дня
                </td>
                <td>
                    Температура
                </td>
                <td>
                    Давление
                </td>
                <td>
                    Облачность
                </td>
                <td>
                    Скорость ветра
                </td>
                <td>
                    Направление ветра
                </td>
                <td>
                    Влажность
                </td>
            </tr>
        </thead>
        <tbody>
            {{#each day as |weather|}}
                {{weather-show-component weather=weather}}
            {{/each}}
        </tbody>
    </table>
</div>